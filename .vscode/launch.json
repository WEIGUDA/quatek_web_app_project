  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug current python file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "pythonPath": "${config:python.pythonPath}",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Debug Flask",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "pythonPath": "${config:python.pythonPath}",
      "program": "${workspaceFolder}/backend/run_pro.py",
      "gevent": true,
      "cwd": "${workspaceFolder}/backend",
      "args": []
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Vue",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend/src",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Debug PyTest",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend/tests",
      "stopOnEntry": false,
      "module": "pytest",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Celery",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "stopOnEntry": false,
      "pythonPath": "${config:python.pythonPath}",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "args": ["worker", "--app=app.mod_task.tasks", "-l=INFO"]
    }
  ]
}

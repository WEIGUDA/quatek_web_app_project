{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flask",
      "type": "shell",
      "command": "pipenv run python run.py",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Vue",
      "type": "shell",
      "command": "npm run serve",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "Celery Worker",
      "type": "shell",
      "command": "pipenv run celery -A app.tasks worker",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Celery Beat",
      "type": "shell",
      "command": "pipenv run celery -A app.tasks beat",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    }
  ]
}
